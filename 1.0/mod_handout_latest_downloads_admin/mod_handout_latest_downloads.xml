<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" client="administrator" method="upgrade">
	<name>Handout Latest Downloads Log</name>
	<creationDate>April 2011</creationDate>
	<author>Kontent Design</author>
	<copyright>This extension is released under the GNU/GPL License</copyright>
	<authorEmail>support@kontentdesign.com</authorEmail>
	<authorUrl>www.sharehandouts.com</authorUrl>
	<version>1.0</version>
	<description>Shows the latest downloaded documents in the Handout admin control panel</description>

	<setting ordering="3" position="handout_cpanel" published="1" module="mod_handout_latest_downloads"/>

	<languages folder="language">
      	<language tag="en-GB">en-GB/en-GB.mod_handout_latest_downloads.ini</language>
    </languages>

	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename module="mod_handout_latest_downloads">mod_handout_latest_downloads.php</filename>
	</files>

	<params>
		<param name="limit" type="text" default="10" label="Limit" description="The number of documents to display (default 10)" />
	</params>
</install>